{
  "name": "es6book",
  "private": true,
  "license": "MIT",
  "version": "1.0.0",
  "description": "ES6 book",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "prepublish": "gitbook install",
    "start": "gitbook serve",
    "build": "gitbook build",
    "eslint": "eslint src/**/*.js",
    "eslint:md": "eslint -c .md.eslintrc --ext .md source/**/*.md",
    "textlint": "gulp textlint",
    "test:js": "mocha './source/**/*-test.js'",
    "test": "npm-run-all --parallel test:js textlint eslint:md eslint build"
  },
  "keywords": [
    "gitbook",
    "textlint"
  ],
  "devDependencies": {
    "babel-cli": "^6.7.7",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-jsdoc-to-assert": "^1.0.1",
    "babel-preset-power-assert": "^1.0.0",
    "babel-register": "^6.7.2",
    "eslint": "^2.3.0",
    "eslint-plugin-markdown": "git://github.com/eslint/eslint-plugin-markdown.git",
    "gitbook-cli": "^2.1.2",
    "gitbook-plugin-include-codeblock": "^1.4.0",
    "gitbook-plugin-japanese-support": "0.0.1",
    "gulp": "^3.9.0",
    "gulp-textlint": "^1.0.1",
    "mocha": "^2.2.5",
    "npm-run-all": "^1.0.0",
    "power-assert": "^1.3.1",
    "textlint": "^6.3.0",
    "textlint-rule-max-ten": "^2.0.1",
    "textlint-rule-no-mix-dearu-desumasu": "^2.2.1",
    "textlint-rule-no-start-duplicated-conjunction": "^1.0.3",
    "textlint-rule-prh": "^3.0.1",
    "textlint-rule-spellcheck-tech-word": "^5.0.0"
  }
}
